BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
            size_hint_x: 4
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text,1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text,-1)
    Button:
        text: 'Convert miles to km'
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1)
